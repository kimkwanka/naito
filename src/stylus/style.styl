$color-accent = #66C49B

@import '../../node_modules/jeet/'
@import './sutairu'

header
  color $color-text
  position absolute
  top 10px
  width 100%
  z-index 9999

.headerLogo
  color $color-text
  transition all 0.5s ease-in-out
  display inline-block
  margin-bottom 0px
  font-weight bold
  &:hover
    color $color-primary

.loginButton
  color $color-text
  float right
  margin-top 8px
  background none
  border 1px solid alpha($color-text, 0.5)
  &:hover
    color $color-primary
    background transparent
    border 1px solid alpha($color-primary, 0.5)
hr
  margin-top 0
  margin-bottom 10px

button
  //font-weight bold
  transition all 0.5s ease-in-out
  box-shadow: 1px 1px 1px rgba(0,0,0,0.14)

.button
  //font-weight bold
  transition all 0.5s ease-in-out

.searchHero
  position relative
  box-shadow inset 0 0 0 1000px rgba(0,0,0,0.3);
  background url('/assets/bg.jpg')
  background-size cover
  height 100vh

.heroTitle
  text-align center
  font-size 600%
  text-shadow 1px 1px rgba(0,0,0,0.7)
  font-weight bold

.heroSubTitle
  text-align center
  text-shadow 1px 1px rgba(0,0,0,0.7)

.searchHeroCenter
  margin auto
  width 50%
  height 50%
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  transform translateY(0)
.heroFlyUp
  transform translateY(-75%)
.searchBarOuter
  position relative

.searchBar
  width 100%
  
input.searchBar
  background $color-background
  color $color-primary
  font-size 140%
  padding-top 20px
  padding-bottom 20px

$iconSize= 30px

.searchButton
  position absolute
  top 0px
  right 0
  padding 4px 10px 38px 10px  
  background $color-primary
  border none
  &:hover
    background $color-accent

.searchIcon  
	cursor pointer
	display inline-block
	background transparent
	border-radius 50%
	border ($iconSize/6) solid $color-text
	height $iconSize
	width $iconSize
	position relative
	&:after
    content: ''
    position: absolute
    top: ($iconSize/2) + ($iconSize/4*1.414) - 4px
    left: ($iconSize/2) + ($iconSize/8*1.414) - 6px
    transform: rotate(45deg)
    height: ($iconSize/6)
    width: ($iconSize/2)
    background-color: $color-text
    border-radius: 10px


.POI
  transition all 0.5s ease-in-out
  center()
  border 1px solid #eee
  border-radius 4px
  margin-top 20px
  margin-bottom 20px
  box-shadow: 1px 1px 1px rgba(0,0,0,0.14)
  &:hover
    border 1px solid $color-primary

.poiTitle
  margin-top 10px
  margin-bottom 10px
  padding-left 10px
  float left

.poiGoingButton
  margin 0
  padding 0 15px
  margin-right 10px
  margin-top 10px
  font-size 120%
  float right

.active
  background $color-accent
  border 1px solid $color-accent

.poiImg
  border-radius 4px
  float left
  margin 10px 20px
  
.poiSnippet
  margin 16px
  font-style italic

.poiAddress
  margin 0
  padding 0

input
  transition all 0.5s ease-in-out
  color $color-text
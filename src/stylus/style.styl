// $color-background = #fff
// $color-initial = #000
$color-primary = #F9627D
$color-text = rgba(255,255,255,1)
// $color-secondary = #606c76
// $color-tertiary = #f4f5f6
// $color-quaternary = #d1d1d1
// $color-quinary = #e1e1e1
$color-accent = #66559B

@import '../../node_modules/jeet/'
@import './sutairu'

header
  color $color-text
  position absolute
  top 10px
  width 100%
  z-index 999999
.headerContainer
  center(1080px)
  
.headerLogo
  color $color-text
  transition all 0.5s ease-in-out
  display inline-block
  margin-bottom 0px
  font-weight bold
  &:hover
    color $color-primary
    span:nth-child(2)
      color $color-text
  span:nth-child(2)
    transition all 0.5s ease-in-out
    color $color-primary

.loginButton
  color $color-text
  float right
  margin-top 8px
  background none
  border 1px solid alpha($color-text, 0.5)
  &:hover
    color $color-primary
    background transparent
    border 1px solid alpha($color-primary, 0.5)
  &:focus
    border 1px solid alpha($color-text, 0.5)
    color $color-text
hr
  margin-top 0
  margin-bottom 10px

button
  transition all 0.5s ease-in-out
  box-shadow: 1px 1px 1px rgba(0,0,0,0.14)

.button
  transition all 0.5s ease-in-out

.searchHero
  position relative
  box-shadow inset 0 0 0 1000px rgba(0,0,0,0.3);
  background url('/assets/bg.jpg')
  background-size cover
  height 100vh

.heroTitle
  transition opacity 0.6s ease-in-out
  text-align center
  font-size 600%
  text-shadow 1px 1px rgba(0,0,0,0.7)
  font-weight bold
  span:nth-child(2)
    color $color-primary

.heroSubTitle
  transition opacity 0.5s ease-in-out
  text-align center
  text-shadow 1px 1px rgba(0,0,0,0.7)  
  span:nth-child(2)
    font-weight bold
  span:nth-child(3)
    color $color-primary
    font-weight bold
  span:nth-child(4)
    font-weight bold

.searchHeroCenter
  z-index 99999
  transition transform 0.7s ease-in-out
  margin auto
  width 30%
  height 40%
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  transform translateY(0)
.heroFlyUp
  transform translateY(-105%)
  .heroTitle,
  .heroSubTitle
    opacity 0
.searchBarOuter
  position relative

.searchBar
  width 100%
  
input.searchBar
  background $color-background
  color $color-primary
  font-size 140%
  padding-top 20px
  padding-bottom 20px

$iconSize= 30px

.searchButton
  position absolute
  top 0px
  right 0
  padding 4px 10px 38px 10px  
  background $color-primary
  border none
  &:hover
    background $color-accent

.searchIcon  
	cursor pointer
	display inline-block
	background transparent
	border-radius 50%
	border ($iconSize/6) solid $color-text
	height $iconSize
	width $iconSize
	position relative
	&:after
    content: ''
    position: absolute
    top: ($iconSize/2) + ($iconSize/4*1.414) - 4px
    left: ($iconSize/2) + ($iconSize/8*1.414) - 6px
    transform: rotate(45deg)
    height: ($iconSize/6)
    width: ($iconSize/2)
    background-color: $color-text
    border-radius: 10px

.searchResultsOuter
  transition opacity 0.5s ease-in-out
  opacity 0
  position absolute
  z-index 999
  top 0
  bottom 0
  left 0
  right 0
  background linear-gradient(rgba(0,0,0,0.5), black)
  overflow hidden
  transform translateX(0)
  visibility hidden

.searchResultsVisible
  opacity 1
  visibility visible

.searchResults
  position relative
  center(1080px)
  margin-top 200px
  z-index 999999999

@keyframes POIANIMATION {
  0%   { opacity: 0; }
  100% { opacity: 1; }
}
@keyframes POIANIMATION2 {  
  0%   { transform: translateY(600px); }
  100% { transform: translateY(0); }
}

.POI
  //animation POIANIMATION 3s 1, POIANIMATION2 3s 1
  position relative
  transition all 0.25s ease-in-out
  transform translateY(0)
  border 1px solid black
  border-radius 2px
  &:hover
    border 1px solid $color-primary
    box-shadow inset 0px 0px 0 1px $color-primary
.opened
  .poiInfo
    opacity 1
  .poiTitle
    color $color-primary

.poiBG
  box-shadow inset 0px 0px 0 2px rgba(255, 255, 255, 0.25)

.poiListColumn
  span(1/3)
  
.poiTitle
  overflow hidden
  width 85%
  max-height 41px
  margin 0
  margin-top 5px
  margin-left 2px
  padding 5px 10px
  float left
  background rgba(0,0,0,0.25)
  font-size 150%
  color $color-text
  text-shadow 2px 2px black
  cursor pointer
  
.poiGoingButton
  position absolute
  right 5px
  top 5px
  padding 0 15px
  font-size 120%
  background $color-accent
  border 1px solid $color-accent

.active
  background $color-primary
  border 1px solid $color-primary

.poiInfo  
  transition opacity 0.25s ease-in-out
  position absolute
  z-index 9999999
  top 47px
  opacity 0
  box-shadow inset 0px 0px 0 2px rgba(255, 255, 255, 0.25)

.poiGoing
  text-shadow 1px 1px black
  background rgba(0,0,0,0.5)
  margin 5px
  padding 5px 10px
  box-shadow inset 0px 0px 0 2px rgba(255, 255, 255, 0.15)
  span
    color $color-primary
  span:first-child
    font-weight bold
    color $color-text

.poiSnippet
  margin 5px
  //margin 5px 5px 5px 33%
  padding 10px
  //font-style italic
  text-shadow 1px 1px black
  background rgba(0,0,0,0.5)
  //text-align right
  color alpha($color-text, 0.85)
  box-shadow inset 0px 0px 0 2px rgba(255, 255, 255, 0.15)

.poiAddress
  margin 0
  padding 0

input
  transition all 0.5s ease-in-out
  color $color-text